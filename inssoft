#!/bin/bash

declare -a proj=(
  "0x020/idbf"
  "0x020/hosts"
  "endormi/tilux"
  "endormi/find_domain_ip"
  "endormi/automation"
  "endormi/webaimcc-cli"
  "endormi/emacs-init"
)

for i in "${proj[@]}"
do
  if [ "$i" == "endormi/tilux" ]; then
    if [[ `lsb_release -d | grep 'Ubuntu'` == 0 ]]; then
      # skip over
      continue
    fi
  fi

  if [ "$i" == "endormi/emacs-init" ]; then
    if [ ! -d "$HOME/.emacs.d" ]; then
      # skip over
      continue
    fi
  fi

  if [ ! -d "$i" ]; then
    echo "Installing $i"
    git clone https://github.com/$i.git $i
    echo "Done!"
  else
    echo "$i Already exists!"
  fi
done
